# ============================================
# TRIBE v2 Migration Scripts - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ============================================

# --------------------------------------------
# MongoDB Atlas Configuration
# --------------------------------------------
# Connection URI for MongoDB Atlas (includes credentials)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Optional: Database and collection names (defaults shown)
MONGO_DB=Cluster0
MONGO_COLLECTION=locationEntity

# --------------------------------------------
# MySQL Azure Configuration
# --------------------------------------------
# Host for MySQL Azure database
MYSQL_HOST=your-server.mysql.database.azure.com

# MySQL credentials
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# Optional: Port and database (defaults shown)
MYSQL_PORT=3306
MYSQL_DATABASE=tribe-back-office

# --------------------------------------------
# PostgreSQL TRIBE v2 Configuration
# --------------------------------------------
# PostgreSQL password (REQUIRED)
PG_PASSWORD=your_postgres_password

# Optional: Other PostgreSQL settings (defaults shown)
PG_HOST=localhost
PG_PORT=5433
PG_USER=postgres
PG_DATABASE=tribe
