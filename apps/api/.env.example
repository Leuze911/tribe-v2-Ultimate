# Server
PORT=4000
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# PostgreSQL (TypeORM) - REQUIRED
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here
DATABASE_NAME=tribe
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# MinIO - REQUIRED for file uploads
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=tribe-photos

# Supabase Auth (optional, for Supabase auth integration)
SUPABASE_URL=http://localhost:9999
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-at-least-32-characters

# RabbitMQ (optional, for events)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=tribe
RABBITMQ_PASSWORD=your_rabbitmq_password

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
